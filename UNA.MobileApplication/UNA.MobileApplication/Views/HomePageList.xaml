    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="listNewsViewTemplate">
                <ViewCell>
                    <Grid Padding="5,0,5,5" RowSpacing="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="110" />
                        </Grid.RowDefinitions>
                        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*" />
                                    <ColumnDefinition Width="70*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0">
                                    <yummy:PancakeView CornerRadius="10">
                                        <ffimageloading:CachedImage
                                            sharedTransitions:Transition.Group="{Binding News_ID}"
                                            sharedTransitions:Transition.Name="NewsImage"
                                            Aspect="AspectFill"
                                            HeightRequest="100"
                                            Source="{Binding Main_Image_Path}"
                                            WidthRequest="150" />
                                    </yummy:PancakeView>
                                </StackLayout>
                                <StackLayout Grid.Column="1" HeightRequest="100">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackLayout Grid.Row="0" HeightRequest="70">
                                            <Label
                                                FontFamily="{StaticResource InterBold}"
                                                FontSize="Small"
                                                LineBreakMode="WordWrap"
                                                Text="{Binding Title}"
                                                TextColor="{DynamicResource primaryColor}" />
                                        </StackLayout>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50*" />
                                                <ColumnDefinition Width="50*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontSize="Small"
                                                LineBreakMode="WordWrap"
                                                Text="{Binding Source_Tag}"
                                                TextColor="{DynamicResource ThirdColor}"
                                                VerticalOptions="Center" />
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontSize="Small"
                                                LineBreakMode="WordWrap"
                                                Text="{Binding Publish_Date}"
                                                TextColor="{DynamicResource SecondColor}"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </Grid>
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="oneNewsViewTemplate">
                <ViewCell>
                    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
                        <yummy:PancakeView
                            BackgroundColor="{DynamicResource background}"
                            CornerRadius="10"
                            Elevation="8"
                            HasShadow="True" />
                        <yummy:PancakeView CornerRadius="10">
                            <ffimageloading:CachedImage
                                sharedTransitions:Transition.Group="{Binding News_ID}"
                                sharedTransitions:Transition.Name="NewsImage"
                                Aspect="AspectFill"
                                HeightRequest="200"
                                Source="{Binding Main_Image_Path}" />
                        </yummy:PancakeView>
                        <StackLayout>
                            <Label
                                Margin="0,20,0,0"
                                FontFamily="{StaticResource InterBold}"
                                FontSize="Small"
                                LineBreakMode="WordWrap"
                                Text="{Binding Title}"
                                TextColor="{DynamicResource mainLabel}" />
                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="twoColumnViewTemplate">
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
