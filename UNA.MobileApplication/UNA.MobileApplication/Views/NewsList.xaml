    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <ContentPage.Content>
        <ScrollView>
            <ListView
                x:Name="ItemsListView"
                CachingStrategy="RecycleElement"
                Footer=""
                HasUnevenRows="true"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                ItemSelected="OnItemSelected"
                ItemsSource="{Binding obsCollectionNews}"
                VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10,10,10,10" RowSpacing="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*" />
                                    <ColumnDefinition Width="50*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Orientation="Vertical"
                                    VerticalOptions="FillAndExpand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40*" />
                                            <ColumnDefinition Width="60*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout Grid.Column="0">
                                            <yummy:PancakeView CornerRadius="10">
                                                <ffimageloading:CachedImage
                                                    Aspect="AspectFill"
                                                    HeightRequest="150"
                                                    Source="ImageUrl" />
                                            </yummy:PancakeView>
                                        </StackLayout>
                                        <StackLayout Grid.Column="1" HeightRequest="150">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <StackLayout Grid.Row="0">
                                                    <Label
                                                        FontFamily="{StaticResource InterBold}"
                                                        FontSize="Small"
                                                        LineBreakMode="WordWrap"
                                                        Text="TITLE"
                                                        TextColor="{DynamicResource mainLabel}" />
                                                </StackLayout>
                                                <StackLayout Grid.Row="1">
                                                    <Label
                                                        FontSize="Small"
                                                        LineBreakMode="WordWrap"
                                                        Text="يونا"
                                                        TextColor="{DynamicResource primaryColor}"
                                                        VerticalOptions="Center" />
                                                </StackLayout>
                                                <Label
                                                    Grid.Row="2"
                                                    FontSize="Small"
                                                    LineBreakMode="WordWrap"
                                                    Text="FROM_DATE"
                                                    TextColor="{DynamicResource primaryColor}"
                                                    VerticalOptions="Center" />
                                            </Grid>
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
